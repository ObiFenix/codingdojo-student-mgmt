<div class="container">
    <h2 class="heading-view">Coding Dojo<span class="white-text"> <%= @dojo.city %></span></h2>
    <ul class="col s12">
        <li class="col s6"><h6>Address: <span class="grey-text"><%= @dojo.street %></span></li></h6>
        <li class="col s6">
            <h6>City: <span class="grey-text"><%= @dojo.city   %></span></h6>
            <h6>State: <span class="grey-text"><%= @dojo.state  %></span></h6>
        </li>
    </ul>

    <table class="highlight">
        <thead>
        <tr>
            <th class="theader">First Name</th>
            <th class="theader">Last Name </th>
            <th class="theader">Email     </th>
            <th class="theader">Actions   </th>
        </tr>
        </thead>
        <tbody>
            <% if @students %>
            <div>
                <% @students.each do |student| %>
                <tr class="trbody">
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name  %></td>
                    <td><%= student.email      %></td>
                    <td>
                        <%= link_to 'Show', dojo_student_path(student), class:'sn show' %>
                        <%= link_to 'Edit', edit_dojo_student_path(student), class:'sn edit' %>
                        <%= link_to 'Delete', dojo_student_path(student), class:'sn delete', method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
                <% end %>
            </div>
            <% else %>
            <h1>No Student Has Been  Added, Yet!</h1>
            <% end %>
        </tbody>
    </table>
</div>

<%= link_to 'Add New Student', new_dojo_student_path(@dojo), class:'btn sn bottom-links' %>
<%= link_to 'Edit Dojo', edit_dojo_path(@dojo), class:'btn sn bottom-links', style:'margin-left:0.2rem !important'%>
<%= link_to 'Back', url_for(:back), class:'btn sn bottom-links right limits' %>
