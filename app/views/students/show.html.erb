<div class="container" style="padding: 2rem 4rem !important">
    <!--
    ==========
    Header...
    ==========
    -->
    <h2 class="student_header"><%= @this_student %>'s <span>Profile</span></h2>
    <ul class="col s12">
        <li class="col s6 mt-3 mb-3"><h6>Branch: <span class="blue-text"><%= @this_dojo.branch %></span></li></h6>
        <li class="col s6 mt-3 mb-3"><h6>Level: <span class="blue-text">Unkown</span></li></h6>
        <li class="col s6 mt-3 mb-3"><h6>Email: <span class="blue-text"><%= @student.email %></span></li></h6>
    </ul>

    <!--
    =========================
    Dojo/Student Cohort Table
    =========================
    -->
    <table class="highlight">
        <h4>Cohort</h4>
        <thead>
        <tr>
            <th class="theader">First Name</th>
            <th class="theader">Last Name </th>
            <th class="theader">Email     </th>
        </tr>
        </thead>
        <tbody>
            <div>
                <% @this_dojo.students.each do |student| %>
                <tr class="trbody">
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name  %></td>
                    <td><%= student.email      %></td>
                </tr>
                <% end %>
            </div>
        </tbody>
    </table>

    <!--
    Actions
    -->
    <div class="grided">
        <%= link_to  "Edit", edit_dojo_student_path(@this_dojo), class:'btn edit sn blue-text top-margin6', style:'border-radius:.25rem !important' %>
        <%= link_to 'Delete', dojo_student_path(@student), class:'btn delete sn red-text top-margin6', style:'border-radius:.25rem !important', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
</div>

<%= link_to 'Back', url_for(:back), class:'btn sn bottom-links right limits' %>
